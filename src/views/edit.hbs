<div class=" p-4 rounded-5 bg-secondary shadow-sm text-light container-fluid">
  <form action="/edit/{{task._id}}" , method="POST">
    <div class="form-group">
      <label for="title">Modify the title:</label>
      <input class="form-control border-2  rounded-3 bg-secondary" id="title" type="text" name="title" placeholder="Title" value="{{task.title}}" />
    </div>

    <div class="form-group">
      <label for="description">Modify the description:</label>
      <textarea class="form-control border-2  rounded-3 bg-secondary" id="decription" name="description" rows="3">
        {{task.description}}
      </textarea>
    </div>
    
    <div class="form-group">
      <label for="img">Modify the image link:</label>
      <textarea id="img" class="form-control border-2  rounded-3 bg-secondary" name="img" rows="3">
        {{task.img}}
      </textarea>
    </div>
    
    <div class="my-3">
      {{#if task.male}}
      <div class="form-check">
        <input id="male" name="sex" value="Male" type="radio" class="form-check-input" required>
        <label class="form-check-label" for="male">Male</label>
      </div>
      <div class="form-check">
        <input id="female" name="sex"  value="Female" type="radio" class="form-check-input" required>
        <label class="form-check-label" for="female">Female</label>
      </div>
      {{/if}}
      {{#if task.female}}
      <div class="form-check">
        <input id="male" name="sex" value="Male" type="radio" class="form-check-input" required>
        <label class="form-check-label" for="male">Male</label>
      </div>
      <div class="form-check">
        <input id="female" name="sex"  value="Female" type="radio" class="form-check-input" required>
        <label class="form-check-label" for="female">Female</label>
      </div>
      {{/if}}
    </div>
    

    <button class="btn btn-outline-light border-2 rounded-5">Update</button>
  </form>
</div>